    ViewBag.Title = "Home";
    ViewBag.WelomstTekstVerborgenClass = Model.WelkomstekstVerbergen ? "WelkomstTekstVerborgen" : "";

}
@section Styles {

}
@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var buttons = {
                previous: $('#spotLightItems .button-previous'),
                next: $('#spotLightItems .button-next')
            };
            $obj = $('#spotLightItems').lofJSidernews({
                interval: 4000,
                easing: 'easeInOutQuad',
                duration: 1200,
                auto: true,
                maxItemDisplay: 6,
                startItem: 0,
                navPosition: 'horizontal', // horizontal
                navigatorHeight: null,
                navigatorWidth: null,
                mainWidth: 980,
                buttons: buttons
            });


            $.ajax({
                url: '@Url.Action("Twitter","Feed")',
                data: {},
                dataType: "json",
                //callbackParameter: "jsoncallback",
                timeout: 5000,
                success: function (data) {
                    $("#LoadingTwitter").remove();
                    var str = '';
                    for (var i = 0; i < data.length; i++) {
                        str += '<div>' + replaceURLWithHTMLLinks(data[i].text) + '</div>';
                    }
                    //console.log(str);
                    $("#Tweets").append(str);
                    $("#Tweets").cycle({
                        fx: 'fade',
                        speed: 300
                    });

                },
                error: function (XHR, textStatus, errorThrown) {
                }
            });

            function replaceURLWithHTMLLinks(text) {
                var exp = /(\b(https?|ftp|file):\/\/[-A-Z0-9+&@@#\/%?=~_|!:,.;]*[-A-Z0-9+&@@#\/%=~_|])/ig;
                return text.replace(exp, "<a href='$1'>$1</a>");
            }
        });

    </script>
}
