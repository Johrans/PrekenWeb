@using PrekenWeb.Data.Tables
@model ZoekenPredikant
@{ 
    ViewBag.Title = Resources.ZoekenPredikant;
    string lastFirstLetter = string.Empty;
}
<h1>@ViewBag.Title</h1>

<ul class="StandaardLijst">
    @foreach (Predikant predikant in Model.Predikanten)
    {
        if (lastFirstLetter != predikant.Achternaam.Substring(0, 1).ToUpper())
        { 
            <li class="StandaardLijstHeader">@predikant.Achternaam.Substring(0, 1).ToUpper()</li>
        }
        <li><a href="@Url.Action("Index", "Zoeken", new { PredikantId = predikant.Id })">
            <div class="fa fa-arrow-right"></div>@predikant.VolledigeNaam</a></li>
        
        lastFirstLetter = predikant.Achternaam.Substring(0, 1).ToUpper();
    }
</ul>


