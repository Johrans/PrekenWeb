@using Data.ViewModels
@using Prekenweb.Website.Lib.HtmlHelpers
@model Data.Tables.Preek


@if (Model != null)
{

    switch (Model.PreekTypeId)
    {
        case (int)PreekTypeEnum.Preek:
    @Html.IconActionLink(Resources.BeluisterDezePreek, "Open", "Preek", new { Id = Model.Id }, new { Class = "Knop" }, "music")
            break;
        case (int)PreekTypeEnum.Lezing:
    @Html.IconActionLink(Resources.BeluisterDezeLezing, "Open", "Preek", new { Id = Model.Id }, new { Class = "Knop" }, "volume-up")
            break;
        case (int)PreekTypeEnum.LeesPreek:
    @Html.IconActionLink(Resources.LeesDezePreek, "Open", "Preek", new { Id = Model.Id }, new { Class = "Knop" }, "font")
            break;
    }
    <br />
    <br />
}