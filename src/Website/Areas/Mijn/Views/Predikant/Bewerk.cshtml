@model PredikantEditViewModel
@{ ViewBag.Title = string.Format("Bewerk predikant {0}", Model.Predikant.VolledigeNaam); }

<h1>@ViewBag.Title</h1>
@using (Html.BeginForm("Bewerk", "Predikant", FormMethod.Post, new { name = "FormPredikant" }))
{
    @Html.HiddenFor(m => m.Predikant.Id)
    @Html.HiddenFor(m => m.Predikant.TaalId)
    @Html.HiddenFor(m => m.Predikant.OudId)
    @Html.Partial("MaakBewerk", Model)
    <p class="clear"></p>
    <a href="@Url.Action("Index")" class="IconKnop">
        <div class="fa fa-arrow-left"></div>
        @Resources.Terug</a>
    <a href="#" onclick="document.FormPredikant.submit(); return false;" class="IconKnop">
        <div class="fa fa-save"></div>
        @Resources.Opslaan</a>
 
    <p class="clear"></p>
}