@model AfbeeldingEditViewModel
@{ ViewBag.Title = "Upload afbeelding"; }

<h1>@ViewBag.Title</h1>
@using (Html.BeginForm("Maak", "Afbeelding", FormMethod.Post, new { name = "FormAfbeelding", enctype = "multipart/form-data" }))
{
    @Html.Partial("MaakBewerk", Model)
    <p class="clear"></p>
    <a href="@Url.Action("Index")" class="IconKnop">
        <div class="fa fa-arrow-left"></div>
        @Resources.Terug</a>
    <a href="#" onclick="document.FormAfbeelding.submit(); return false;" class="IconKnop">
        <div class="fa fa-save"></div>
        @Resources.Aanmaken</a>
 
    <p class="clear"></p>
}