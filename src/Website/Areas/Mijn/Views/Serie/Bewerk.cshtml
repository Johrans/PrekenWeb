@model SerieEditViewModel
@{ ViewBag.Title = string.Format("{0} {1} {2}", Resources.Bewerk, Resources.Serie.ToLower(), Model.Serie.Omschrijving); }

<h1>@ViewBag.Title</h1>
@using (Html.BeginForm("Bewerk", "Serie", FormMethod.Post, new { name = "FormSerie" }))
{
    @Html.HiddenFor(m => m.Serie.Id)
    @Html.HiddenFor(m => m.Serie.OudId)
    @Html.HiddenFor(m => m.Serie.TaalId)
    @Html.Partial("MaakBewerk", Model)
    <p class="clear"></p>
    <a href="@Url.Action("Index")" class="IconKnop">
        <div class="fa fa-arrow-left"></div>
        @Resources.Terug</a>
    <a href="#" onclick="document.FormSerie.submit(); return false;" class="IconKnop">
        <div class="fa fa-save"></div>
        @Resources.Opslaan</a>
 
    <p class="clear"></p>
}